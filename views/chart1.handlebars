
<div id="placeholder2" class="ct-chart ct-golden-section reportView1"></div>
<script type="text/javascript">
  var dbData = JSON.stringify({{chartvar}});
  console.dir(dbData);
  var chartLabels[];
  var chartSeries[];
  for (prod in dbData) {
    chartLabels[prod] = dbData[prod].invName;
    
    chartSeries[prod] = dbData[prod].invStock;
  }



  var data = {
  labels: chartLabels,
  series: chartSeries
};

var options = {
  labelInterpolationFnc: function(value) {
    return value[0]
  }
};

var responsiveOptions = [
  ['screen and (min-width: 640px)', {
    chartPadding: 30,
    labelOffset: 100,
    labelDirection: 'explode',
    labelInterpolationFnc: function(value) {
      return value;
    }
  }],
  ['screen and (min-width: 1024px)', {
    labelOffset: 80,
    chartPadding: 20
  }]
];

new Chartist.Pie('.ct-chart', data, options, responsiveOptions);

</script>